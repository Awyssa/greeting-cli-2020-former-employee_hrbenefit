#!/usr/bin/env ruby
require_relative "../lib/greeting.rb"

puts "HAL9000: Hi! I'm HAL9000, what is your name?"

name = gets.chomp.strip

greeting(name)

help_nums

num = gets.chomp.to_i

run_help(num)

10.times do

  puts "Fascinating! Would you like to hear another fact? Please say y or n"

  y_n = gets.chomp.downcase

  if y_n != "y"
    puts "HAL9000: Goodbye!"
    exit
  end

  puts "HAL9000: Wonderful!"
  help_nums
  num = gets.chomp.to_i
  run_help(num)

end
